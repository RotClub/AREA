{
	"name": "area-web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"postinstall": "npm install --global prisma && npx prisma generate",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"env:dev": "vercel env pull --yes --environment=development --token=${VERCEL_TOKEN} .env",
		"env:preview": "vercel env pull --yes --environment=preview --token=${VERCEL_TOKEN} .env",
		"env:prod": "vercel env pull --yes --environment=production --token=${VERCEL_TOKEN} .env",
		"link_vercel": "vercel link --token=${VERCEL_TOKEN} --yes --project=area-app"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@skeletonlabs/skeleton": "2.10.2",
		"@skeletonlabs/tw-plugin": "0.4.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-vercel": "^5.4.4",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/forms": "0.5.9",
		"@tailwindcss/typography": "0.5.15",
		"@types/eslint": "8.56.0",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^22.5.4",
		"@types/simple-oauth2": "^5.0.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "10.4.20",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "8.4.45",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-motion": "^0.12.2",
		"tailwindcss": "3.4.11",
		"tailwindcss-view-transitions": "^0.1.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vite-plugin-tailwind-purgecss": "0.3.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "1.6.10",
		"@prisma/client": "^5.21.1",
		"@sveltejs/adapter-node": "^5.2.4",
		"@sveltejs/adapter-static": "^3.0.5",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"clsx": "^2.1.1",
		"cookie": "^0.7.2",
		"dotenv": "^16.4.5",
		"highlight.js": "11.10.0",
		"jsonwebtoken": "^9.0.2",
		"lucide-svelte": "^0.441.0",
		"openid-client": "^5.7.0",
		"query-string": "^9.1.0",
		"simple-oauth2": "^5.1.0",
		"svelte-motion": "^0.12.2",
		"tailwind-merge": "^2.5.2"
	}
}
